<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentRelative"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".route.RouteDrawingActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:text="Draw The Route"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        app:autoSizeTextType="uniform"/>

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/imageResult"
        android:layout_below="@id/lblTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"
        android:background="@drawable/cave"
        android:foregroundGravity="center"
        android:scaleType="centerInside">
    </ImageView>
    <!--android:background="@android:color/background_light"-->

    <FrameLayout
        android:id="@+id/imageViewFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/imageResult"
        android:layout_below="@id/lblTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"
        android:foregroundGravity="center"
        android:scaleType="centerInside">

    </FrameLayout>

    <ImageView
        android:id="@+id/imageResult"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@id/btnsaveimage"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:foregroundGravity="center"
        android:scaleType="centerInside">
    </ImageView>


    <Button
        android:id="@+id/btnsaveimage"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:shadowColor="@color/black"
        app:backgroundTint="#000000"
        android:text="CONFIRM" />




</RelativeLayout>